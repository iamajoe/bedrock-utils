{
  "name": "bedrock-utils",
  "version": "0.1.2",
  "description": "Utils to use on the frontend and node",
  "repository": {
    "type": "git",
    "url": "git@bitbucket.org:sendoushi/bedrock-utils.git"
  },
  "main": "./dist/index.js",
  "engines": {
    "node": ">=5"
  },
  "scripts": {
    "test": "npm run eslint-test && npm run mocha-test && npm run flow",
    "flow": "flow stop; flow; test $? -eq 0 -o $? -eq 2",
    "flow-typed": "flow-typed install",
    "mocha-test": "mocha ./test/test.js --compilers js:babel-core/register",
    "eslint-test": "eslint ./src/**/*.js",
    "build": "rm -rf dist/* && babel src --out-dir dist --source-maps inline --ignore *.spec.js"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.20.0",
    "babel-eslint": "^6.1.2",
    "babel-plugin-syntax-flow": "^6.18.0",
    "babel-plugin-transform-flow-comments": "^6.17.0",
    "babel-plugin-transform-flow-strip-types": "^6.18.0",
    "babel-preset-es2015": "^6.18.0",
    "chai": "^3.5.0",
    "es6-promise": "^4.0.5",
    "eslint": "^2.0.0",
    "eslint-config-defaults": "^9.0.0",
    "eslint-plugin-react": "^6.2.0",
    "flow-bin": "^0.37.0",
    "flow-typed": "^2.0.0",
    "glob": "^7.1.1",
    "mocha": "^3.2.0"
  },
  "dependencies": {
    "lodash": "^4.17.2"
  }
}
